{
  "title": "HDFS Alerts Dashboard",
  "tags": ["hdfs", "alerts", "alertmanager"],
  "timezone": "browser",
  "editable": true,
  "refresh": "30s",
  "schemaVersion": 39,
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "Active Alerts",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "count(ALERTS{alertstate=\"firing\"}) or vector(0)",
          "legendFormat": "Firing"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 3 }
            ]
          },
          "mappings": [],
          "color": { "mode": "thresholds" }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "type": "stat",
      "title": "NameNode Status",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "up{job=\"namenode\"}",
          "legendFormat": "NameNode"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
          ],
          "color": { "mode": "thresholds" }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "type": "stat",
      "title": "DataNode Status",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "up{job=\"datanode\"}",
          "legendFormat": "DataNode"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "mappings": [
            { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } } }
          ],
          "color": { "mode": "thresholds" }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "type": "stat",
      "title": "HDFS Capacity Used %",
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "(hadoop_namenode_fs_namesystem_capacityused / hadoop_namenode_fs_namesystem_capacitytotal) * 100",
          "legendFormat": "Used %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 80 },
              { "color": "red", "value": 90 }
            ]
          },
          "color": { "mode": "thresholds" }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "type": "table",
      "title": "Current Firing Alerts",
      "gridPos": { "x": 0, "y": 4, "w": 24, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "ALERTS{alertstate=\"firing\"}",
          "legendFormat": "{{ alertname }} - {{ instance }}",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": { "Time": true, "__name__": true, "Value": true },
            "renameByName": {
              "alertname": "Alert",
              "alertstate": "State",
              "instance": "Instance",
              "job": "Job",
              "severity": "Severity"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Severity" },
            "properties": [
              {
                "id": "custom.cellOptions",
                "value": { "type": "color-background" }
              },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "yellow", "value": null }
                  ]
                }
              }
            ]
          }
        ]
      }
    },
    {
      "type": "timeseries",
      "title": "Alert History (ALERTS metric)",
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "ALERTS{alertstate=~\"firing|pending\"}",
          "legendFormat": "{{ alertname }} [{{ severity }}] {{ instance }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 80,
            "stacking": { "mode": "normal" }
          },
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "type": "timeseries",
      "title": "HDFS Capacity Used %",
      "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "(hadoop_namenode_fs_namesystem_capacityused / hadoop_namenode_fs_namesystem_capacitytotal) * 100",
          "legendFormat": "Capacity Used %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 80 },
              { "color": "red", "value": 90 }
            ]
          },
          "custom": {
            "thresholdsStyle": { "mode": "line+area" }
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "JVM Heap Usage %",
      "gridPos": { "x": 12, "y": 20, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "(jvm_memory_bytes_used / jvm_memory_bytes_max) * 100",
          "legendFormat": "{{ instance }}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 80 },
              { "color": "red", "value": 95 }
            ]
          },
          "custom": {
            "thresholdsStyle": { "mode": "line+area" }
          }
        }
      }
    }
  ]
}
